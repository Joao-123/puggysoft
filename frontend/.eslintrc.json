{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "standard"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "indent": [ "error", 2], // Identation 2 spaces
    "linebreak-style": ["error", "windows"], // CRLF windows line break.
    "quotes": ["error", "double"], // Double quotation always.
    "semi": ["error", "always"], // Semicolon always (;).
    "no-trailing-spaces": ["error"], // No trailing spaces.
    "camelcase": ["error", {"properties": "always"}],
    "brace-style": ["error", "1tbs"], // no space after funcName function funcName()
    "space-before-function-paren": ["error", "always"] // space before function parent
  }
}